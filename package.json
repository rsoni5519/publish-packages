{
  "name": "publish-packages",
  "version": "0.4.0",
  "description": "Template for setting up a TypeScript monorepo",
  "repository": "git@github.com:rsoni5519/publish-packages.git",
  "private": false,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/*/src/*",
      "examples/*"
    ],
    "nohoist": [
      "**react**",
      "**react-native/",
      "**react-native/**"
    ]
  },
  "author": "lerna <support@lerna.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint  --fix",
    "clean": "lerna run clean",
    "clean:all": "lerna run clean && rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf examples/*/node_modules && rm -rf examples/*/build",
    "clean:node_modules": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf examples/*/node_modules",
    "build": "lerna run build",
    "pub": "lerna publish",
    "test": "lerna run test"
  },
  "lint-staged": {
    "packages/*/{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.22.0",
    "doctoc": "^2.0.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "i": "^0.3.6",
    "lerna": "^4.0.0",
    "npm": "^7.9.0",
    "rimraf": "~3.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "0.14.2",
    "typescript": "^4.2.4"
  }
}
